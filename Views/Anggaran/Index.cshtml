@model SIP.Models.Lra

@{
    ViewBag.Title = "Anggaran";
    ViewBag.SubHeaderTitle = "Anggaran";
    ViewBag.S1 = "";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="Index">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <!--begin::Portlet-->
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <input type="hidden" asp-for="IdLra" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label asp-for="Tahun" class="control-label"></label>
                            <input asp-for="Tahun" class="form-control datefield" type="text" asp-format="{0:yyyy}" autocomplete="off" required />
                            <span asp-validation-for="Tahun" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 form-group">
                            <div class="kt-form__actions kt-align-center">
                                <button type="submit" class="btn btn-success">Proses</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(".datefield").datepicker({
            format: "yyyy",
            viewMode: "years",
            minViewMode: "years",
            autoclose: true
        });

    </script>
}
