@model SIP.Models.Ssrd

@{
    Layout = null;
    var no = 0;
    var height = 250;
}

<html lang="id">

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/css/print-style.css" rel="stylesheet" />
    <link href="~/css/paper/F4.css" rel="stylesheet" />
    <style>
        .join {
            border-collapse: collapse;
        }

        .tb-square {
            border: solid 1px #000000;
            height: 19px;
            width: 20px;
            text-align: center;
        }

        .checkbox {
            border: solid 1px #000000;
            height: 19px;
            padding: 1px 5px;
            text-align: center;
        }

        .checkbox-non {
            border: solid 1px #000000;
            height: 19px;
            padding: 1px 9px;
            text-align: center;
        }

        .tb-detail {
            height: 30px;
            vertical-align: middle;
            font-size: 14px;
        }

        .tb-padding td {
            padding: 2px 20px;
            font-size: 14px;
        }
    </style>
    <!--begin::Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/media/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/media/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/media/favicon/favicon-16x16.png">
    <link rel="shortcut icon" href="~/media/favicon/favicon.ico">
    <meta name="msapplication-TileColor" content="#2d89ef">
    <meta name="msapplication-config" content="~/media/favicon/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">
    <!--end::Favicon -->
</head>

<body class="cetak-vis">
    <div style="width: 100%;">
        <div align="center">
            <div class="F4">
                <table width="100%" cellspacing="0" cellpadding="0" class="report">
                    <tr>
                        <td><img class="logo-new" src="~/media/logos/logo.png" /></td>
                    </tr>
                    <tr style="font-size: 14px">
                        <td align="right"><span class="vis-print">@Model.NoSsrd</span></td>
                    </tr>
                </table>
                <table width="100%" cellspacing="0" cellpadding="0" style="width: 750px; color: #343030; border: 1px solid #000">
                    <tr>
                        <td width="5%"></td>
                        <td width="55%" class="tb-kanan cetak-vis">
                            <table width="100%">
                                <tr>
                                    <td align="center" style="font-size: 17px; font-weight:600; padding-top: 5px"><span style="text-transform:uppercase;">@ViewBag.Title2</span></td>
                                </tr>
                                <tr>
                                    <td align="center" style="font-size: 17px; font-weight:600"><span style="text-transform:uppercase;">@ViewBag.Title1</span></td>
                                </tr>
                                <tr>
                                    <td align="center" style="font-size: 14px; "><span>@Context.Session.GetString("Opd")</span></td>
                                </tr>
                                <tr>
                                    <td align="center" style="font-size: 14px; padding-bottom: 5px"><span>@Context.Session.GetString("Alamat")</span></td>
                                </tr>
                            </table>
                        </td>
                        <td width="40%">
                            <table width="100%">
                                <tr>
                                    <td align="center" style="font-weight: 600; font-size: 18px; padding-top: 5px"><span style="text-transform:uppercase;">SSRD</span></td>
                                </tr>
                                <tr>
                                    <td align="center" style="font-size: 14px;"><span style="text-transform:uppercase;">(SURAT SETORAN RETRIBUSI DAERAH)</span></td>
                                </tr>
                                <tr>
                                    <td style="padding-bottom: 5px">
                                        <table>
                                            <tr style="font-size:14px">
                                                <td style="padding-left: 105px">Tahun</td>
                                                <td>: <span class="vis-print">@string.Format("{0:yyyy}", Model.Tanggal)</span></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <table width="100%" class="tb-join" cellspacing="0" cellpadding="0" style="width: 750px; padding: 5px 10px; color: #343030; border: 1px solid #000">
                    <tr>
                        <td>
                            <table class="table-borderless" width="100%" style="margin-top: 5px; font-size: 14px;">
                                <tr>
                                    <td width="22%" style="padding-left:29px; padding-top:10px;"><span>Nama</span></td>
                                    <td width="78%" style="padding-top:10px;">: <span style="text-transform:uppercase;" class="vis-print"> @Model.IdSubjekNavigation.Nama</span></td>
                                </tr>
                                <tr>
                                    <td style="padding-left:29px; padding-top:12px;"><span>Alamat</span></td>
                                    <td style="padding-top:12px;">: <span style="text-transform:uppercase;" class="vis-print"> @Model.IdSubjekNavigation.Alamat RT. @Model.IdSubjekNavigation.Rtrw</span></td>
                                </tr>
                                <tr>
                                    <td style="padding-left:29px; padding-top:8px;"><span></span></td>
                                    <td style="padding-top:8px; padding-left:8px;"><span style="text-transform:uppercase;" class="vis-print"> Kel. @Model.IdSubjekNavigation.IndKelurahan.Kelurahan Kec. @Model.IdSubjekNavigation.IndKecamatan.Kecamatan</span></td>
                                </tr>
                                <tr>
                                    <td style="padding-left:29px; padding-top:8px;"><span>NPWPD</span></td>
                                    <td style="padding-top:8px;">
                                        <table class="join" cellspacing="0" cellpadding="0">
                                            <tr>
                                                <td>: </td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(0, 1)</span></td>
                                                <td style="width:10px"></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(2, 1)</span></td>
                                                <td style="width:10px"></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(4, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(5, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(6, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(7, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(8, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(9, 1)</span></td>
                                                <td style="width:10px"></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(11, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(12, 1)</span></td>
                                                <td style="width:10px"></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(14, 1)</span></td>
                                                <td class="tb-square"><span class="vis-print">@Model.IdSubjekNavigation.Npwpd.Substring(15, 1)</span></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding-top:23px; vertical-align: top; font-size: 14px;"><span>Menyetor berdasarkan</span></td>
                                    <td style="padding-top: 22px;">
                                        <table width="100%" class="join" cellspacing="0" cellpadding="0" style=" font-size: 14px;">
                                            <tr>
                                                <td width="38%">: <span class="vis-print">SKRD</span></td>
                                                <td width="22%"></td>
                                                <td width="40%"></td>
                                            </tr>
                                            <tr>
                                                <td style="padding: 10px 0 10px 10px">Masa Retribusi : <span class="vis-print">@string.Format("{0:MMM}", Model.IdSkrdNavigation.MasaRetribusi1) - @string.Format("{0:MMM}", Model.IdSkrdNavigation.MasaRetribusi2)</span></td>
                                                <td style="padding: 10px 0">Tahun : <span class="vis-print">@string.Format("{0:yyyy}", Model.IdSkrdNavigation.MasaRetribusi2)</span></td>
                                                <td style="padding: 10px 0">No : <span class="vis-print">@Model.IdSkrdNavigation.NoSkrd</span></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 6px">
                            <table class="join" cellspacing="0" cellpadding="0" width="100%">
                                <tr class="tb-border--all">
                                    <td align="center" width="6%" class="tb-detail"><strong>No.</strong></td>
                                    <td align="center" width="13%" class="tb-detail"><strong>Ayat</strong></td>
                                    <td align="center" width="47%" class="tb-detail"><strong>Jenis Retribusi Daerah</strong></td>
                                    <td align="center" width="34%" class="tb-detail"><strong>Jumlah (Rp.)</strong></td>
                                </tr>
                                @foreach (var item in (List<SkrdDt>)ViewBag.Detail)
                                {
                                    height -= 60;
                                    <tr class="tb-border tb-border--both">
                                        <td align="center" class="tb-detail vis-print">@(no += 1)</td>
                                        <td class="tb-detail vis-print">@Model.IdCoa</td>
                                        <td class="tb-detail vis-print">@Model.IdCoaNavigation.Uraian.Remove(0, 10)</td>
                                        <td align="right" class="tb-detail vis-print">@string.Format("{0:C0}", item.Total)</td>
                                    </tr>
                                    <tr class="tb-border tb-border--both">
                                        <td align="center" class="tb-detail"></td>
                                        <td class="tb-detail"></td>
                                        <td class="tb-detail vis-print">
                                            @item.IdTarifNavigation.Objek -
                                            @(item.IdTarifNavigation.Satuan1 != null ? item.IdTarifNavigation.Var1.ToString() + " " + item.IdTarifNavigation.Satuan1 : "")
                                            @(item.IdTarifNavigation.Satuan2 != null ? item.IdTarifNavigation.Var2.ToString() + " " + item.IdTarifNavigation.Satuan2 : "")
                                            x @string.Format("{0:C0}", item.IdTarifNavigation.Tarif)
                                        </td>
                                        <td align="right" class="tb-detail"></td>
                                    </tr>
                                }
                                <tr class="tb-border tb-border--bottom-three">
                                    <td style="height:@(height)px"></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr class="tb-padding">
                                    <td></td>
                                    <td class="tb-kanan"></td>
                                    <td class="tb-detail tb-bawah tb-kanan">Jumlah Ketetapan Pokok</td>
                                    <td class="tb-kanan tb-bawah vis-print" align="right">@string.Format("{0:C0}", Model.IdSkrdNavigation.Terhutang)</td>
                                </tr>
                                <tr class="tb-padding">
                                    <td></td>
                                    <td class="tb-kanan"></td>
                                    <td class="tb-detail tb-kanan"><span>Jumlah Sanksi : </span>a. Bunga 2% Perbulan</td>
                                    <td class="tb-kanan tb-bawah vis-print" align="right">@string.Format("{0:C0}", Model.IdSkrdNavigation.Bunga)</td>
                                </tr>
                                <tr class="tb-padding">
                                    <td></td>
                                    <td class="tb-kanan"></td>
                                    <td class="tb-detail tb-bawah tb-kanan"><span style="visibility: hidden">Jumlah Sanksi : </span>b. Kenaikan 100%</td>
                                    <td class="tb-kanan tb-bawah vis-print" align="right">@string.Format("{0:C0}", Model.IdSkrdNavigation.Kenaikan)</td>
                                </tr>
                                <tr class="tb-padding">
                                    <td></td>
                                    <td class="tb-kanan"></td>
                                    <td class="tb-detail tb-bawah tb-kanan">Jumlah Keseluruhan</td>
                                    <td class="tb-kanan tb-bawah vis-print" align="right">@string.Format("{0:C0}", Model.IdSkrdNavigation.Terhutang)</td>
                                </tr>
                                <tr>
                                    <td colspan="4" style="height:35px"></td>
                                </tr>
                                <tr class="tb-padding">
                                    <td colspan="2">DENGAN HURUF</td>
                                    <td colspan="2" class="tb-atas tb-kanan tb-bawah tb-kiri tb-detail cetak-vis"><span class="vis-print" id="terbilang"></span></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top:35px">
                            <table width="100%" class="join" cellspacing="0" cellpadding="0" style="padding: 5px 10px; color: #343030; border: 1px solid #000">
                                <tr style="font-size: 14px;">
                                    <td width="30%" align="center" style="padding-top: 10px;">Ruang untuk Teraan</td>
                                    <td width="40%" align="center" style="padding-top: 10px;" class="tb-kanan tb-kiri">Diterima oleh,</td>
                                    <td width="30%" align="center" style="padding-top: 10px;"><span>@Context.Session.GetString("Kecamatan"), </span><span class="vis-print">@string.Format("{0:dd MMMM yyyy}", Model.Tanggal)</span></td>
                                </tr>
                                <tr style="font-size: 14px;">
                                    <td align="center">Kas Register/Tanda</td>
                                    <td align="center" class="tb-kanan tb-kiri vis-print">@ViewBag.Jabatan</td>
                                    <td align="center"><span>Penyetor,</span></td>
                                </tr>
                                <tr style="font-size: 14px;">
                                    <td align="center">Tangan/Cap</td>
                                    <td class="tb-kanan tb-kiri"></td>
                                    <td><span></span></td>
                                </tr>
                                <tr style="height: 60px">
                                    <td></td>
                                    <td class="tb-kanan tb-kiri"></td>
                                    <td></td>
                                </tr>
                                <tr style="font-size: 14px;">
                                    <td></td>
                                    <td align="center" class="tb-kanan tb-kiri"><span style="text-decoration:underline" class="vis-print">@ViewBag.TTD</span></td>
                                    <td align="center"><span class="vis-print">@Model.IdSubjekNavigation.Nama</span></td>
                                </tr>
                                <tr style="font-size: 14px;">
                                    <td style="padding-bottom: 10px;"></td>
                                    <td align="center" style="padding-bottom: 10px;" class="tb-kanan tb-kiri vis-print">NIP. @ViewBag.NIP</td>
                                    <td style="padding-bottom: 10px;"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding-top: 20px">
                            <table class="join" cellspacing="0" cellpadding="0" width="100%">
                                <tr class="tb-padding">
                                    <td width="15%"></td>
                                    <td width="70%" align="center" class="tb-atas tb-kanan tb-bawah tb-kiri tb-detail">PEMBAYARAN SAH, BILA TERDAPAT CAP ATAU TERAAN KAS REGISTER</td>
                                    <td width="15%"></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr style="height: 110px; font-size: 14px;">
                        <td></td>
                    </tr>
                </table>
                <table width="100%" class="tb-join" cellspacing="0" cellpadding="0" style="width: 750px; padding: 5px 10px;">
                    <tr>
                        <td>
                            <span style="font-size: 13px; position: absolute; vertical-align: middle"><img src="~/media/logos/logo-sip.png" width="20" /><span style="padding-top: 10px; vertical-align: super"> Printed By: SIP</span></span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <script src="~/js/terbilang.js"></script>
    <script>
        document.getElementById("terbilang").innerHTML = (terbilang(@Math.Floor(Model.IdSkrdNavigation.Terhutang ?? 0))) + "rupiah";
    </script>
</body>
</html>

