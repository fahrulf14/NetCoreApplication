@model SIP.Models.DataIzin

@{
    ViewBag.Title = "Edit Data Izin";
    ViewBag.SubHeaderTitle = "Data Izin";
    ViewBag.S1 = "Edit Data";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="Edit">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!--begin::Portlet-->
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <input type="hidden" asp-for="IdIzin" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label asp-for="IdSuratIzin" class="control-label required">Jenis</label>
                            <select asp-for="IdSuratIzin" class="form-control kt-selectpicker" title="Pilih Surat Izin..." asp-items="ViewBag.IdSuratIzin" required></select>
                            <span asp-validation-for="IdSuratIzin" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-5 form-group">
                            <label asp-for="Nomor" class="control-label required"></label>
                            <input asp-for="Nomor" class="form-control" required />
                            <span asp-validation-for="Nomor" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="Tanggal" class="control-label required"></label>
                            <input asp-for="Tanggal" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required />
                            <span asp-validation-for="Tanggal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="MasaBerlaku" class="control-label required">Masa Berlaku s/d</label>
                            <input asp-for="MasaBerlaku" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required />
                            <span asp-validation-for="MasaBerlaku" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6 form-group">
                            <label asp-for="PemberiIzin" class="control-label required">Pemberi Izin</label>
                            <input asp-for="PemberiIzin" class="form-control" required />
                            <span asp-validation-for="PemberiIzin" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions kt-align-right">
                        <a asp-action="Index" asp-route-id="@Model.IdUsaha" class="btn btn-secondary">Kembali</a>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>