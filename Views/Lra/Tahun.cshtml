@model IEnumerable<SIP.Models.Lra>

@{
    ViewBag.SubHeaderTitle = "LRA";
    ViewBag.S1 = "";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <!--begin::Portlet-->
        <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a href="/Lra/Periode/@ViewBag.Tahun" class="btn btn-sm m-btn btn-info"><i class="la la-print"></i> Cetak LRA</a>
                        @*<span style="overflow: visible; position: relative;">
                            <span class="dropdown">
                                <a href="#" class="btn btn-sm m-btn btn-info" data-toggle="dropdown" aria-expanded="false"><i class="la la-print"></i> Cetak LRA</a>
                                <span class="dropdown-menu dropdown-menu-right">
                                    <a href="/Lra/Periode/@ViewBag.Tahun/Jenis" class="dropdown-item"><i class="la la-user-plus"></i> Per Jenis</a>
                                    <a href="/Lra/Periode/@ViewBag.Tahun/All" class="dropdown-item"><i class="la la-user-plus"></i> Keseluruhan</a>
                                </span>
                            </span>
                        </span>*@
                        <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-form kt-form--label-right kt-margin-t-10 kt-margin-b-10 kt-margin-5-mobile">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="row align-items-center">
                                <div class="col-sm-2 col-1 kt-margin-b-10-mobile order-2 order-sm-1 length">
                                    <div class="kt-form__group">
                                        <select class="form-control kt-selectpicker" id="length">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-auto order-3 order-sm-2 kt-margin-b-10-mobile">
                                    <div class="kt-input-icon kt-input-icon--left">
                                        <input type="text" class="form-control" placeholder="Search..." id="search">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover dt-custom" id="m_table">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Kode Rekening
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCoaNavigation.Uraian)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Anggaran)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Realisasi)
                            </th>
                            <th>
                                Proggres
                            </th>
                            <th>
                                Presentase
                            </th>
                            <th>Kelola</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            decimal persen = 0;
                            var state = "";
                            if (item.Afinal != 0)
                            {
                                persen = (decimal)item.Realisasi / (decimal)item.Afinal * 100;
                            }
                            if (persen < 25) { state = "danger"; }
                            else if (persen >= 25 && persen < 50) { state = "warning"; }
                            else if (persen >= 50 && persen < 75) { state = "info"; }
                            else { state = "success"; }
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCoaNavigation.Kdcoa)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCoaNavigation.Uraian)
                                </td>
                                <td>
                                    @string.Format("{0:C0}", item.Anggaran)
                                </td>
                                <td>
                                    @string.Format("{0:C0}", item.Realisasi)
                                </td>
                                <td>
                                    <div class="progress progress-sm">
                                        <div class="progress-bar kt-bg-@state" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: @String.Format("{0:N0}", persen)%;"></div>
                                    </div>
                                </td>
                                <td>
                                    <span>
                                        <span class="kt-badge kt-badge--inline kt-badge--@state">@String.Format("{0:N2}", persen) %</span>
                                    </span>
                                </td>
                                <td nowrap>
                                    <a asp-action="Details" asp-route-id="@item.IdLra" class="btn btn-sm btn-label-success">Detail <i class="la la-arrow-circle-right"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--end::Portlet-->
    </div>
</div>

@section Scripts {
    <script>
            var DatatablesBasicScrollable = function () {
                var initTable = function () {
                    var table = $('#m_table');
                    table.DataTable({
                        searching: true,
                        bJQueryUI: true,
                        bFilter: true,
                        dom: "<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                        scrollY: '60vh',
                        scrollX: true,
                        scrollCollapse: true,
                        columnDefs: [{
                            targets: 0,
                            width: 15,
                            className: "dt-center"
                        }, {
                            targets: -1,
                            width: 100,
                            className: "dt-center"
                        }]
                    });

                    $('#m_table').DataTable().on('order.dt search.dt', function () {
                        $('#m_table').DataTable().column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                            cell.innerHTML = i + 1;
                            $('#m_table').DataTable().cell(cell).invalidate('dom');
                        });
                    }).draw();

                    $('#length').on('change', function () {
                        var selectedValue = $(this).val();
                        $('#m_table').DataTable().page.len(selectedValue).draw();
                    });

                    $("#search").on('keyup', function () {
                        $('#m_table').dataTable().fnFilter(this.value);
                    });

                    $('.dataTables_scrollBody').css('min-height', '150px');
                };

                return {
                    init: function () {
                        initTable();
                    },
                };

            }();

            jQuery(document).ready(function () {
                DatatablesBasicScrollable.init();
            });

    </script>
}
