@model Menu

<form asp-action="Create">
    <div class="modal-header">
        <h5 class="modal-title" id="ModalTitle">Tambah Master Menu</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="la la-remove"></span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="Parent" value="@ViewBag.Parent"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="Nama" class="control-label">Nama Menu</label>
                <input asp-for="Nama" class="form-control" required />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="IconClass" class="control-label">Icon Class</label>
                @if (ViewBag.Parent != "0")
                {
                    <div class="input-group">
                        <input asp-for="IconClass" disabled class="form-control" placeholder="Icon Class" aria-describedby="icon-addon">
                        <div class="input-group-append">
                            <button class="btn btn-info disabled" type="button">Search Icon</button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="input-group">
                        <input asp-for="IconClass" required class="form-control" placeholder="Icon Class" aria-describedby="icon-addon">
                        <div class="input-group-append">
                            <button class="btn btn-info" data-toggle="modal" data-target="#icon_modal" type="button">Search Icon</button>
                        </div>
                    </div>
                }
                <span asp-validation-for="IconClass" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="IsParent" class="control-label"></label>
                <div class="kt-checkbox-inline">
                    <label class="kt-checkbox">
                        <input class="check2" asp-for="IsParent" /> <p id="@Html.DisplayNameFor(model => model.IsParent)_Status">Tidak</p>
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="Controller" class="control-label"></label>
                <input asp-for="Controller" class="form-control" required />
                <span asp-validation-for="Controller" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="ActionName" class="control-label">Action</label>
                <input asp-for="ActionName" class="form-control" required />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" value="Simpan" class="btn btn-success" />
    </div>
</form>