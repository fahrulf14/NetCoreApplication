@model SIP.Models.DataSubjek

@{
    ViewBag.SubHeaderTitle = "Pendaftaran";
    ViewBag.S1 = "Wajib Pajak/Retribusi Badan";
    ViewBag.S2 = "Daftar";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="Create" asp-route-jenis="@ViewBag.Jenis">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <!--begin::Portlet-->
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="TglDaftar" class="control-label required">Tanggal Daftar</label>
                            <input asp-for="TglDaftar" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required />
                            <span asp-validation-for="TglDaftar" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="IdBadanHukum" class="control-label required">Badan Hukum</label>
                            <select asp-for="IdBadanHukum" class="form-control kt-selectpicker" title="Pilih Badan Hukum..." asp-items="ViewBag.IdBadanHukum"></select>
                            <span asp-validation-for="IdBadanHukum" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="Npwp" class="control-label required"></label>
                            <input asp-for="Npwp" class="form-control" onkeyup="CekNpwp()" autocomplete="off" required />
                            <span asp-validation-for="Npwp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label asp-for="Nama" class="control-label required"></label>
                            <input asp-for="Nama" class="form-control" required />
                            <span asp-validation-for="Nama" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10 form-group">
                            <label asp-for="Alamat" class="control-label required"></label>
                            <input asp-for="Alamat" class="form-control" required />
                            <span asp-validation-for="Alamat" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2 form-group">
                            <label asp-for="Rtrw" class="control-label required">Rt/Rw</label>
                            <input asp-for="Rtrw" class="form-control" required />
                            <span asp-validation-for="Rtrw" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="IndProvinsiId" class="control-label required">Provinsi</label>
                            <select asp-for="IndProvinsiId" data-size="6" title="Pilih Provinsi..." data-live-search="true" required asp-items="ViewBag.IndProvinsiId" class="form-control kt-selectpicker"></select>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="IndKabKotaId" class="control-label required">Kabupaten/Kota</label>
                            <select asp-for="IndKabKotaId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                <option hidden>Pilih Kab/Kota...</option>
                            </select>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="IndKecamatanId" class="control-label required">Kecamatan/Distrik</label>
                            <select asp-for="IndKecamatanId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                <option hidden>Pilih Kecamatan...</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="IndKelurahanId" class="control-label required">Kelurahan/Desa</label>
                            <select asp-for="IndKelurahanId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                <option hidden>Pilih Kelurahan...</option>
                            </select>
                        </div>
                        <div class="col-lg-2 form-group">
                            <label asp-for="KodePos" class="control-label">Kode Pos</label>
                            <input asp-for="KodePos" class="form-control" />
                            <span asp-validation-for="KodePos" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="NoTelp" class="control-label required">Nomor Telepon</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                <input asp-for="NoTelp" class="form-control" autocomplete="off" required />
                            </div>
                            <span asp-validation-for="NoTelp" class="text-danger"></span>
                        </div>
                        <div class="col-lg-5 form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-envelope-o"></i></span></div>
                                <input asp-for="Email" class="form-control" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions kt-align-right">
                        <a asp-action="Badan" class="btn btn-secondary">Kembali</a>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/js/wilayah.js"></script>
    <script>
        var Inputmask = {
            init: function () {
                $("#Rtrw").inputmask({
                    mask: "99/99",
                    placeholder: ""
                }), $("#KodePos").inputmask({
                    mask: "999999",
                    placeholder: ""
                }), $("#NoTelp").inputmask({
                    mask: "999999999999",
                    placeholder: ""
                }), $("#Npwp").inputmask({
                    mask: "99.999.999.9-999.999",
                    placeholder: ""
                })
            }
        };
        jQuery(document).ready(function () {
            Inputmask.init()
        });

        var BootstrapDatepicker = {
            init: function () {
                $("#TglDaftar").datepicker({
                    format: "dd-mm-yyyy",
                    todayHighlight: !0,
                    orientation: "bottom left",
                    autoclose: true
                })
            }
        };
        jQuery(document).ready(function () {
            BootstrapDatepicker.init()
        });

        function CekNpwp() {
            var npwp = document.getElementById("Npwp").value;
            if (npwp.length === 20) {
                $.ajax({
                    type: 'POST',
                    url: '/AjaxData/CekNpwp',
                    dataType: 'json',
                    data: {
                        id: npwp
                    },
                    success: function (data) {
                        $.each(data, function (i, item) {
                            if (item.id != null) {
                                $.notify({
                                    // options
                                    message: 'NPWP Sudah terdaftar atas nama ' + item.nama,
                                    title: 'Peringatan',
                                    url: 'Details/' + item.id,
                                    icon: "icon la la-warning",
                                    target: "_self"
                                }, {
                                    // settings
                                    type: "warning",
                                    allow_dismiss: false,
                                    placement: { from: "top", align: "center" },
                                    offset: { x: 30, y: 30 },
                                    spacing: 10,
                                    z_index: 10000,
                                    delay: 1000,
                                    timer: 5000,
                                    mouse_over: null,
                                    animate: { enter: 'animated fadeInDown', exit: 'animated fadeOutUp' },
                                    onShow: null,
                                    onShown: null,
                                    onClose: null,
                                    onClosed: null
                                });
                            }
                        });
                    },
                    complete: function () {
                        $.unblockUI();
                    },
                });
            }
        }

        $("#IndKabKotaId").prop('disabled', true);
        $("#IndKecamatanId").prop('disabled', true);
        $("#IndKelurahanId").prop('disabled', true);

    </script>
}
