@model SIP.Models.DataBadan

@{
    ViewBag.SubHeaderTitle = "Pendaftaran";
    ViewBag.S1 = "Wajib Pajak/Retribusi Pribadi";
    ViewBag.S2 = "Data Tambahan";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="DataTambahan">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <!--begin::Portlet-->
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <input type="hidden" asp-for="IdBadan" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="Nik" class="control-label required"></label>
                            <input asp-for="Nik" class="form-control" autocomplete="off" required />
                            <span asp-validation-for="Nik" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="Npwp" class="control-label required"></label>
                            <input asp-for="Npwp" class="form-control" autocomplete="off" required />
                            <span asp-validation-for="Npwp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <label asp-for="Nama" class="control-label required"></label>
                            <input asp-for="Nama" class="form-control" required />
                            <span asp-validation-for="Nama" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2 form-group">
                            <label asp-for="Kelamin" class="control-label required"></label>
                            <select asp-for="Kelamin" class="form-control kt-selectpicker" title="Pilih..." asp-items="ViewBag.Kelamin"></select>
                            <span asp-validation-for="Kelamin" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="TglLahir" class="control-label required">Tanggal Lahir</label>
                            <input asp-for="TglLahir" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required />
                            <span asp-validation-for="TglLahir" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-10 form-group">
                            <label asp-for="Alamat" class="control-label required"></label>
                            <input asp-for="Alamat" class="form-control" required />
                            <span asp-validation-for="Alamat" class="text-danger"></span>
                        </div>
                        <div class="col-lg-2 form-group">
                            <label asp-for="Rtrw" class="control-label required">Rt/Rw</label>
                            <input asp-for="Rtrw" class="form-control" required />
                            <span asp-validation-for="Rtrw" class="text-danger"></span>
                        </div>
                    </div>
                    @if (Model.IndProvinsiId == null)
                    {
                        <div class="row">
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndProvinsiId" class="control-label required">Provinsi</label>
                                <select asp-for="IndProvinsiId" data-size="6" title="Pilih Provinsi..." data-live-search="true" required asp-items="ViewBag.IndProvinsiId" class="form-control kt-selectpicker"></select>
                            </div>
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKabKotaId" class="control-label required">Kabupaten/Kota</label>
                                <select asp-for="IndKabKotaId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                    <option hidden>Pilih Kab/Kota...</option>
                                </select>
                            </div>
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKecamatanId" class="control-label required">Kecamatan/Distrik</label>
                                <select asp-for="IndKecamatanId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                    <option hidden>Pilih Kecamatan...</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKelurahanId" class="control-label required">Kelurahan/Desa</label>
                                <select asp-for="IndKelurahanId" data-size="6" data-live-search="true" required class="form-control kt-selectpicker">
                                    <option hidden>Pilih Kelurahan...</option>
                                </select>
                            </div>
                            <div class="col-lg-2 form-group">
                                <label asp-for="KodePos" class="control-label">Kode Pos</label>
                                <input asp-for="KodePos" class="form-control" />
                                <span asp-validation-for="KodePos" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndProvinsiId" class="control-label required">Provinsi</label>
                                <select asp-for="IndProvinsiId" data-size="6" title="Pilih Provinsi..." data-live-search="true" asp-items="ViewBag.IndProvinsiId" required class="form-control kt-selectpicker"></select>
                            </div>
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKabKotaId" class="control-label required">Kabupaten/Kota</label>
                                <select asp-for="IndKabKotaId" data-size="6" title="Pilih Kab/Kota..." data-live-search="true" asp-items="ViewBag.IndKabKotaId" required class="form-control kt-selectpicker"></select>
                            </div>
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKecamatanId" class="control-label required">Kecamatan/Distrik</label>
                                <select asp-for="IndKecamatanId" data-size="6" title="Pilih Kecamatan..." data-live-search="true" asp-items="ViewBag.IndKecamatanId" required class="form-control kt-selectpicker"></select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 form-group">
                                <label asp-for="IndKelurahanId" class="control-label required">Kelurahan/Desa</label>
                                <select asp-for="IndKelurahanId" data-size="6" title="Pilih Kelurahan..." data-live-search="true" asp-items="ViewBag.IndKelurahanId" required class="form-control kt-selectpicker"></select>
                            </div>
                            <div class="col-lg-2 form-group">
                                <label asp-for="KodePos" class="control-label">Kode Pos</label>
                                <input asp-for="KodePos" class="form-control" />
                                <span asp-validation-for="KodePos" class="text-danger"></span>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="NoTelp" class="control-label">Nomor Telepon</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                <input asp-for="NoTelp" class="form-control" autocomplete="off" />
                            </div>
                            <span asp-validation-for="NoTelp" class="text-danger"></span>
                        </div>
                        <div class="col-lg-5 form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-envelope-o"></i></span></div>
                                <input asp-for="Email" class="form-control" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <label asp-for="Jabatan" class="control-label required"></label>
                            <select asp-for="Jabatan" class="form-control kt-selectpicker" title="Pilih Jabatan..." asp-items="ViewBag.Jabatan" required></select>
                            <span asp-validation-for="Jabatan" class="text-danger"></span>
                        </div>
                        <div class="col-lg-4 form-group">
                            <label asp-for="PekerjaanLain" class="control-label">Pekerjaan Lain</label>
                            <input asp-for="PekerjaanLain" class="form-control" />
                            <span asp-validation-for="PekerjaanLain" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions kt-align-right">
                        <a asp-action="DataUsaha" asp-route-id="@Model.IdSubjek" class="btn btn-secondary">Kembali</a>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/js/wilayah.js"></script>
    <script>
        var Inputmask = {
            init: function () {
                $("#Rtrw").inputmask({
                    mask: "99/99",
                    placeholder: ""
                }), $("#KodePos").inputmask({
                    mask: "999999",
                    placeholder: ""
                }), $("#NoTelp").inputmask({
                    mask: "999999999999",
                    placeholder: ""
                }), $("#Nik").inputmask({
                    mask: "9999999999999999",
                    placeholder: ""
                }), $("#Npwp").inputmask({
                    mask: "99.999.999.9-999.999",
                    placeholder: ""
                })
            }
        };
        jQuery(document).ready(function () {
            Inputmask.init()
        });

        var BootstrapDatepicker = {
            init: function () {
                var date = new Date();
                var year = date.getFullYear() - 17;
                var month = date.getMonth();
                var date = date.getDate();
                $("#TglLahir").datepicker({
                    todayHighlight: !0,
                    orientation: "bottom left",
                    format: 'dd-mm-yyyy',
                    startView: "years",
                    viewMode: 'years',
                    startDate: new Date(1940, 01, 01),
                    endDate: new Date(year, month, date),
                    autoclose: true
                })
            }
        };
        jQuery(document).ready(function () {
            BootstrapDatepicker.init()
        });

        var idp = "@Model.IndProvinsiId";

        if (idp == "") {
            $("#IndKabKotaId").prop('disabled', true);
            $("#IndKecamatanId").prop('disabled', true);
            $("#IndKelurahanId").prop('disabled', true);
        }
    </script>
}
