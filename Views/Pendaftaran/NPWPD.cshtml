@model SIP.Models.DataSubjek

    <div class="modal-body kt-callout kt-callout--diagonal-bg">
        <div class="kt-callout__body">
            <div class="kt-callout__content">
                <h3 class="kt-callout__title" style="font-size: 1.4rem">@(Model.Npwpd != null ? "Buat NPWRD?" : "Buat NPWPD?")</h3>
                <p class="kt-callout__desc">
                    Nomor yang akan diterbitkan:<br />
                    <span class="kt-font-bolder">
                        @(Model.Npwpd != null ? Model.Npwpd.Replace("P", "R") : Model.Npwrd.Replace("R", "P"))
                    </span>
                </p>
            </div>
            <div class="kt-callout__action">
                <div class="row">
                    <form asp-action="NPWPD" class="col-lg-12">
                        <input type="hidden" asp-for="IdSubjek" />
                        <button class="btn btn btn-secondary kt-hidden-mobile" data-dismiss="modal">Close</button>
                        <input type="submit" value="Simpan" class="btn btn-success" />
                    </form>
                </div>
            </div>
        </div>
    </div>
