@model IEnumerable<SIP.Models.Skpd>

@{
    ViewBag.SubHeaderTitle = "Penetapan";
    ViewBag.S1 = "SKPD";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<div class="row justify-content-center">
    <div class="col-lg-3 order-2">
        @await Component.InvokeAsync("DetailUsaha", new { id = ViewBag.IdUsaha })
    </div>
    <div class="col-lg-9 order-1">
        <!--begin::Portlet-->
        <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a asp-action="Kewajiban" asp-route-id="@ViewBag.IdUsaha" class="btn btn-bold btn-label-success btn-sm"><i class="la la-undo"></i> Data Kewajiban</a>
                        @if (ViewBag.List > 0)
                        {
                            <a href="javascript:;" onclick="ShowModal();" class="btn btn-bold btn-success btn-sm"><i class="la la-search"></i> Data SPTPD</a>
                        }
                        else
                        {
                            <a href="javascript:;" class="btn btn-bold btn-label-google-o2 btn-sm"><i class="la la-search"></i> Data SPTPD</a>
                        }
                        <div class="btn-group">
                            <a href="#" class="btn btn-info btn-bold btn-sm dropdown-toggle" data-toggle="dropdown">
                                SKPD
                            </a>
                            <div class="dropdown-menu dropdown-menu-sm">
                                <!--begin::Nav-->
                                <ul class="kt-nav">
                                    <li class="kt-nav__item">
                                        <a asp-action="STPD" asp-route-id="@ViewBag.IdSptpd" class="kt-nav__link">
                                            <span class="kt-nav__link-text">STPD</span>
                                        </a>
                                    </li>
                                    <li class="kt-nav__item">
                                        <a asp-action="SKPDN" asp-route-id="@ViewBag.IdSptpd" class="kt-nav__link">
                                            <span class="kt-nav__link-text">SKPDN</span>
                                        </a>
                                    </li>
                                </ul>

                                <!--end::Nav-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-form kt-form--label-right kt-margin-t-10 kt-margin-b-10 kt-margin-5-mobile">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="row align-items-center">
                                <div class="col-sm-2 col-1 kt-margin-b-10-mobile order-2 order-sm-1 length">
                                    <div class="kt-form__group">
                                        <select class="form-control kt-selectpicker" id="length">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-auto order-3 order-sm-2 kt-margin-b-10-mobile">
                                    <div class="kt-input-icon kt-input-icon--left">
                                        <input type="text" class="form-control" placeholder="Search..." id="search">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover dt-custom" id="m_table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                No SKPD
                            </th>
                            <th>
                                Tanggal
                            </th>
                            <th>
                                Masa Pajak
                            </th>
                            <th>
                                Terhutang
                            </th>
                            <th>
                                Validasi
                            </th>
                            <th>
                                Status
                            </th>
                            <th>Kelola</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoSkpd)
                                </td>
                                <td>
                                    @String.Format("{0:dd MMMM yyyy}", item.Tanggal)
                                </td>
                                <td>
                                    @String.Format("{0:MMMM yyyy}", item.IdSptpdNavigation.MasaPajak1)
                                </td>
                                <td>
                                    @String.Format("{0:C0}", item.Terhutang)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.FlagValidasi)
                                </td>
                                 <td>
                                    @Html.DisplayFor(modelItem => item.Keterangan)
                                </td>
                                 <td nowrap>
                                     <span style="overflow: visible; position: relative;">
                                         <span class="dropdown">
                                             <a href="#" class="btn btn-sm btn-label-success" data-toggle="dropdown" aria-expanded="false"> Kelola </a>
                                             <span class="dropdown-menu dropdown-menu-right">
                                                 <a asp-controller="SKPD" asp-action="Details" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-external-link-square"></i> Detail SKPD</a>
                                                 @if (item.FlagValidasi)
                                                 {
                                                     <a asp-controller="SKPD" asp-action="Validasi" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-times-circle"></i>Batalkan Validasi</a>
                                                     <a asp-controller="SKPD" asp-action="Cetak" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-print"></i> Cetak SKPD</a>

                                                 }
                                                 else
                                                 {
                                                     <a asp-controller="SKPD" asp-action="Edit" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-edit"></i> Edit SKPD</a>
                                                     <a asp-controller="SKPD" asp-action="Validasi" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-check-circle"></i> Validasi SKPD</a>
                                                     @if (item.Sspd.Count() == 0)
                                                     {
                                                         <a mini-modal asp-controller="SKPD" asp-action="Delete" asp-route-id="@item.IdSkpd" class="dropdown-item"><i class="la la-trash-o"></i> Hapus SKPD</a>
                                                     }
                                                 }
                                             </span>
                                         </span>
                                     </span>
                                 </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--end::Portlet-->
    </div>
</div>

<div class="modal fade" id="BigModal" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="ListData" class="table table-hover dt-custom table-responsive-sm">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>
                                    Nomor
                                </th>
                                <th>
                                    Masa Pajak
                                </th>
                                <th>
                                    Terhutang
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>Kelola</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (List<Sptpd>)ViewBag.ListData)
                            {
                                <tr>
                                    <td></td>
                                    <td nowrap>
                                        @item.NoSptpd
                                    </td>
                                    <td nowrap>
                                        @String.Format("{0:MMMM yyyy}", item.MasaPajak1)
                                    </td>
                                    <td>
                                        @string.Format("{0:C0}", item.Terhutang)
                                    </td>
                                    <td nowrap>
                                        @item.Keterangan
                                    </td>
                                    <td nowrap>
                                        <a target="_blank" asp-action="Details" asp-controller="SPTPD" asp-route-id="@item.IdSptpd" class="btn btn-sm btn-label-info btn-icon btn-icon-md" title="Details"><i class="la la-external-link"></i></a>
                                        <a asp-action="Create" asp-controller="SKPD" asp-route-id="@item.IdSptpd" class="btn btn-sm btn-label-success btn-icon btn-icon-md" title="Buat SKPD"><i class="la la-arrow-circle-right"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function ShowModal() {
            $("#BigModal").modal();
        };

        var DatatablesBasicScrollable = function () {
            var initTable = function () {
                var table = $('#m_table');
                table.DataTable({
                    searching: true,
                    bJQueryUI: true,
                    bFilter: true,
                    dom: "<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                    scrollY: '60vh',
                    scrollX: true,
                    scrollCollapse: true,
                    columnDefs: [{
                        targets: 0,
                        width: 15,
                        className: "dt-center"
                    }, {
                        targets: -1,
                        width: 100,
                        className: "dt-center"
                    }, {
                        targets: 5,
                        render: function (data, type, full, meta) {
                            var status = {
                                "0": {
                                    'title': 'Belum Valid',
                                    'state': 'danger'
                                },
                                "1": {
                                    'title': 'Valid',
                                    'state': 'success'
                                }
                            };
                            if (typeof status[data] === 'undefined') {
                                return data;
                            }
                            return '<span class="kt-badge kt-badge--' + status[data].state + ' kt-badge--dot"></span>&nbsp;' +
                                '<span class="kt-font-bold kt-font-' + status[data].state + '">' + status[data].title + '</span>';
                        }
                    }, {
                        targets: 6,
                        render: function (data, type, full, meta) {
                            var status = {
                                '0': {
                                    'title': 'Belum Bayar',
                                    'state': 'danger'
                                },
                                '1': {
                                    'title': 'Lunas',
                                    'state': 'success'
                                },
                                '2': {
                                    'title': 'Kurang Bayar',
                                    'state': 'warning'
                                },
                                '3': {
                                    'title': 'Lebih Bayar',
                                    'state': 'primary'
                                }
                            };
                            if (typeof status[data] === 'undefined') {
                                return data;
                            }
                            return '<span class="kt-badge kt-badge--' + status[data].state + ' kt-badge--dot"></span>&nbsp;' +
                                '<span class="kt-font-bold kt-font-' + status[data].state + '">' + status[data].title + '</span>';
                        }
                    }]
                });

                $('#m_table').DataTable().on('order.dt search.dt', function () {
                    $('#m_table').DataTable().column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                        $('#m_table').DataTable().cell(cell).invalidate('dom');
                    });
                }).draw();

                $('#length').on('change', function () {
                    var selectedValue = $(this).val();
                    $('#m_table').DataTable().page.len(selectedValue).draw();
                });

                $("#search").on('keyup', function () {
                    $('#m_table').dataTable().fnFilter(this.value);
                });

                $('.dataTables_scrollBody').css('min-height', '150px');
            };

            return {
                init: function () {
                    initTable();
                },
            };

        }();

        var DatatablesModal = function () {
            var initTable = function () {
                var table = $('#ListData');
                table.DataTable({
                    autoWidth: true,
                    dom: "<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'><'col-sm-12 col-md-7'>>",
                    columnDefs: [{
                        targets: 0,
                        width: 15,
                        className: "dt-center"
                    }, {
                            targets: -1,
                            width: 100,
                            className: "dt-center"
                        }, {
                        targets: 4,
                        render: function (data, type, full, meta) {
                            var status = {
                                '0': {
                                    'title': 'Belum Bayar',
                                    'state': 'danger'
                                },
                                '1': {
                                    'title': 'Lunas',
                                    'state': 'success'
                                },
                                '2': {
                                    'title': 'Kurang Bayar',
                                    'state': 'warning'
                                },
                                '3': {
                                    'title': 'Lebih Bayar',
                                    'state': 'primary'
                                }
                            };
                            if (typeof status[data] === 'undefined') {
                                return data;
                            }
                            return '<span class="kt-badge kt-badge--' + status[data].state + ' kt-badge--dot"></span>&nbsp;' +
                                '<span class="kt-font-bold kt-font-' + status[data].state + '">' + status[data].title + '</span>';
                        }
                    }]
                });

                $('#ListData').DataTable().on('order.dt search.dt', function () {
                    $('#ListData').DataTable().column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                        $('#ListData').DataTable().cell(cell).invalidate('dom');
                    });
                }).draw();

                $('.dataTables_scrollBody').css('min-height', '150px');
            };

            return {
                init: function () {
                    initTable();
                },
            };

        }();


        jQuery(document).ready(function () {
            DatatablesBasicScrollable.init();
            DatatablesModal.init();
            var modaltable = $('#SpptTable').DataTable();
                $('#ListData_wrapper').css('display', 'block');
                modaltable.columns.adjust().draw();
        });

    </script>
}




