@model SIP.Models.RefRetribusi

<form asp-action="Edit">
    <div class="modal-header">
        <h5 class="modal-title" id="ModalTitle">Ubah Data Retribusi</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="la la-remove"></span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="IdRetribusi" />
        <input type="hidden" asp-for="Jenis" />
        <input type="hidden" asp-for="Uraian" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-12 form-group">
                <label class="control-label">Jenis</label>
                <input disabled value="@Model.Jenis" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label class="control-label">Uraian</label>
                <input disabled value="@Model.Uraian" class="form-control">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 form-group">
                <label asp-for="Dok" class="control-label">Dokumen</label>
                <select asp-for="Dok" title="Pilih Dokumen..." required asp-items="ViewBag.Dokumen" class="form-control kt-selectpicker">
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="FlagAktif" class="control-label">Status</label>
                <div class="kt-checkbox-inline">
                    <label class="kt-checkbox">
                        <input class="check" asp-for="FlagAktif" /> <p id="@Html.DisplayNameFor(model => model.FlagAktif)_Status">@(Model.FlagAktif ? "Aktif" : "Tidak Aktif")</p>
                        <span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" value="Simpan" class="btn btn-success" />
    </div>
</form>