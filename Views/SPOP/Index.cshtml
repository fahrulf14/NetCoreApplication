@model IEnumerable<SIP.Models.Spop>

@{
    ViewBag.Title = "SPOP";
    ViewBag.SubHeaderTitle = "SPOP";
    ViewBag.S1 = "";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-form kt-form--label-right kt-margin-t-10 kt-margin-b-10 kt-margin-5-mobile">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="row align-items-center">
                                <div class="col-sm-2 col-1 kt-margin-b-10-mobile order-2 order-sm-1 length">
                                    <div class="kt-form__group">
                                        <select class="form-control kt-selectpicker" id="length">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-2 col-lg-2 col-md-3 col-sm-3 col-auto order-3 order-sm-2 kt-margin-b-10-mobile">
                                    <div class="kt-input-icon kt-input-icon--left">
                                        <input type="text" class="form-control" placeholder="Search..." id="search">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-3 col-12 order-1 order-sm-3 kt-margin-b-10-mobile">
                                    <div class="kt-form__group kt-form__group--inline">
                                        <div class="kt-form__label">
                                            <label>Kecamatan:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control kt-selectpicker" data-size="5" id="IndKecamatanId">
                                                <option value=" ">Semua</option>
                                                @foreach (var items in ViewBag.Kecamatan)
                                                {
                                                    <option value="@items.IndKecamatanId">@items.Kecamatan</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-3 col-12 order-1 order-sm-3 kt-margin-b-10-mobile kt-margin-t-10-tablet">
                                    <div class="kt-form__group kt-form__group--inline">
                                        <div class="kt-form__label">
                                            <label>Kelurahan:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control kt-selectpicker" disabled data-size="5" id="IndKelurahanId">
                                                <option value=" ">Semua</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-2 col-lg-2 col-md-3 col-sm-3 col-12 order-1 order-sm-3 kt-margin-b-10-mobile kt-margin-t-10-tablet">
                                    <div class="kt-form__group kt-form__group--inline">
                                        <div class="kt-form__label">
                                            <label>Status:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control kt-selectpicker" id="status">
                                                <option value=" ">Semua</option>
                                                <option value="true">Valid</option>
                                                <option value="false">Belum Valid</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover dt-custom" id="m_table">
                    <thead>
                        <tr>
                            <th width="15">
                                No
                            </th>
                            <th>
                                Nama WP
                            </th>
                            <th>
                                NPWPD
                            </th>
                            <th>
                                No Objek Pajak
                            </th>
                            <th>
                                Tahun SPPT
                            </th>
                            <th>
                                Letak
                            </th>
                            <th>
                                Kecamatan
                            </th>
                            <th>
                                Kelurahan
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Kelola
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!--end::Portlet-->
    </div>
</div>

@section Scripts {
    <script>
        var DatatablesAjaxServer = function () {

            var initTable1 = function () {
                var table = $('#m_table');

                // begin first table
                table.DataTable({
                    scrollY: '60vh',
                    scrollX: true,
                    scrollCollapse: true,
                    searchDelay: 500,
                    processing: true,
                    serverSide: true,
                    searching: true,
                    bJQueryUI: true,
                    bFilter: true,
                    bSort: true,
                    dom: "<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                    "ajaxSource": "/SPOP/GetSPOP",
                    fnServerData: function (sSource, aoData, fnCallback) {
                        aoData.push({ "name": "all", "value": true });
                        aoData.push({ "name": "tipe", "value": $('#IndKecamatanId').val() });
                        aoData.push({ "name": "tipe2", "value": $('#IndKelurahanId').val() });
                        aoData.push({ "name": "status", "value": $('#status').val() });
                        $.getJSON(sSource, aoData, function (json) {
                            fnCallback(json)
                        });
                    },
                    columns: [
                        { data: 'id' },
                        { data: 'nama' },
                        { data: 'npwpd' },
                        { data: 'nop' },
                        { data: 'sppt' },
                        { data: 'lokasi' },
                        { data: 'kecamatan' },
                        { data: 'kelurahan' },
                        { data: 'status' },
                        { data: 'id' },
                    ],
                    columnDefs: [{
                            targets: 0,
                            orderable: false,
                            render: function (data, type, row, meta) {
                                return meta.row + meta.settings._iDisplayStart + 1;
                            }
                        }, {
                            targets: 4,
                            title: 'Tahun SPPT',
                            data: 'sppt',
                            render: function (data, type, full, meta) {
                                if (full['sppt'] == "-") {
                                    return `<span class="kt-font-danger kt-font-bold">Kosong</span>`;
                                }
                                else if (full['sppt'] < full['tahun']) {
                                    return `<span class="kt-font-danger kt-font-bold">` + data + `</span>`;
                                }
                                else {
                                    return `<span class="kt-font-success kt-font-bold">` + data + `</span>`;
                                }
                            }
                        }, {
                            targets: -1,
                            title: 'Kelola',
                            data: 'id',
                            orderable: false,
                            render: function (data, type, full, meta) {
                                if (full['status'] == "1") {
                                    return `
                        <span style="overflow: visible; position: relative;">
                                        <span class="dropdown">
                                            <a href="#" class="btn btn-sm btn-label-success" data-toggle="dropdown" aria-expanded="false"> Kelola</a>
                                            <span class="dropdown-menu dropdown-menu-right">
                                                <a target="_blank" href="/PBB/SPPT/` + data + `" class="dropdown-item"><i class="la la-map"></i> Buat SPPT</a>
                                                <a target="_blank" href="/PBB/SPOP/` + full['ids'] + `" class="dropdown-item"><i class="la la-external-link-square"></i> Data SPOP</a>
                                            </span>
                                        </span>
                                    </span>`;
                                }
                                else {
                                    return `
                        <span style="overflow: visible; position: relative;">
                                        <span class="dropdown">
                                            <a href="#" class="btn btn-sm btn-label-success" data-toggle="dropdown" aria-expanded="false"> Kelola</a>
                                            <span class="dropdown-menu dropdown-menu-right">
                                                <a target="_blank" href="/PBB/SPOP/` + full['ids'] + `" class="dropdown-item"><i class="la la-external-link-square"></i> Data SPOP</a>
                                            </span>
                                        </span>
                                    </span>`;
                                }
                            }
                        }, {
                            targets: 8,
                            render: function (data, type, full, meta) {
                                var status = {
                                    "0": {
                                        'title': 'Belum Valid',
                                        'state': 'danger'
                                    },
                                    "1": {
                                        'title': 'Valid',
                                        'state': 'success'
                                    }
                                };
                                if (typeof status[data] === 'undefined') {
                                    return data;
                                }
                                return '<span class="kt-badge kt-badge--' + status[data].state + ' kt-badge--dot"></span>&nbsp;' +
                                    '<span class="kt-font-bold kt-font-' + status[data].state + '">' + status[data].title + '</span>';
                            }
                        }
                    ],
                });

                table.DataTable().on('order.dt search.dt', function () {
                    table.DataTable().column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                        table.DataTable().cell(cell).invalidate('dom');
                    });
                }).draw();

                $('#length').on('change', function () {
                    var selectedValue = $(this).val();
                    table.DataTable().page.len(selectedValue).draw();
                });

                $('#IndKecamatanId').on('change', function () {
                    table.DataTable().draw();
                });

                $('#IndKelurahanId').on('change', function () {
                    table.DataTable().draw();
                });

                $('#status').on('change', function () {
                    table.DataTable().draw();
                });

                $("#search").on('keyup', function () {
                    table.dataTable().fnFilter(this.value);
                });
            };

            return {

                //main function to initiate the module
                init: function () {
                    initTable1();
                },

            };

        }();

        jQuery(document).ready(function () {
            DatatablesAjaxServer.init();
        });

        $(function () {
            $("#IndKecamatanId").on("changed.bs.select", function () {
                if (this.value == " ") {
                    $("#IndKelurahanId option").remove();
                    $("#IndKelurahanId").append('<option value=" ">Semua</option>');
                    $('#IndKelurahanId').val(" ").selectpicker('refresh');
                    $("select #IndKelurahanId").attr("disabled", "");
                }
                else {
                    Drop_Kelurahan(this.value);
                }
            });
        });

        // LOAD DROPDOWN KELURAHAN+
        function Drop_Kelurahan(id) {
            ShowLoading();
            $("#IndKelurahanId option").remove();
            var sel = $("#IndKelurahanId");
            $.ajax({
                type: 'POST',
                url: "/AjaxData/DropKelurahan",
                dataType: 'json',
                data: { id },
                success: function (data) {
                    sel.removeAttr("disabled")
                    sel.append('<option value=" ">Semua</option>');
                    $.each(data, function (i, item) {
                        var option =
                            '<option value="' + item.id + '">' + item.uraian + '</option>';
                        sel.append(option);
                    });
                    $('#IndKelurahanId').selectpicker('refresh');
                },
                complete: function () {
                    $.unblockUI();
                }
            });
            return false;
        }

    </script>
}


