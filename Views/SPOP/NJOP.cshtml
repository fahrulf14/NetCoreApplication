@model SIP.Models.Spop

@{
    ViewBag.Title = "Edit NJOP";
    ViewBag.SubHeaderTitle = "SPOP";
    ViewBag.S1 = "Edit NJOP";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="NJOP">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <!--begin::Portlet-->
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <input type="hidden" asp-for="IdSpop" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-12 form-group">
                            <label asp-for="Njop" class="control-label"></label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text"><i class="normal-font">Rp</i></span></div>
                                <input asp-for="Njop" class="form-control rupiah" value="@string.Format("{0:N0}", Model.Njop)" required />
                            </div>
                            <span asp-validation-for="Njop" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 form-group">
                            <div class="kt-form__actions kt-align-right">
                                <a asp-action="SPOP" asp-controller="PBB" asp-route-id="@Model.IdSubjek" class="btn btn-secondary">Kembali</a>
                                <button type="submit" id="SubmitBtn" class="btn btn-brand">Simpan</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/rupiah.mask.js"></script>
}
