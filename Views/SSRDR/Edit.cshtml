@model SIP.Models.Ssrdr

@{
    ViewBag.Title = "Edit Data SSRDR";
    ViewBag.SubHeaderTitle = "SSRDR";
    ViewBag.S1 = "Tambah Data";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<form asp-action="Edit">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            @ViewBag.Title
                        </h3>
                    </div>
                    <div class="kt-portlet__head-toolbar">
                        <div class="kt-portlet__head-group">
                            <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <input type ="hidden" asp-for="IdSsrdr" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Tanggal" class="control-label required"></label>
                            <input asp-for="Tanggal" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required />
                            <span asp-validation-for="Tanggal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Nama" class="control-label required">Nama</label>
                            <input asp-for="Nama" class="form-control" type="text" autocomplete="off" required />
                            <span asp-validation-for="Nama" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Nik" class="control-label required"></label>
                            <input asp-for="Nik" class="form-control" onkeyup="CekNik()" autocomplete="off" required />
                            <span asp-validation-for="Nik" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label asp-for="IdSetoran" class="control-label">Jenis Setoran</label>
                            <select asp-for="IdSetoran" class="form-control kt-selectpicker" title="Pilih Jenis Setoran..." required asp-items="ViewBag.IdSetoran"></select>
                            <span asp-validation-for="IdSetoran" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="kt-portlet__foot">
                    <div class="kt-form__actions kt-align-right">
                        <a asp-action="Index" asp-controller="SSRDR" asp-route-id="@Model.IdCoa" class="btn btn-secondary">Kembali</a>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        var Inputmask = {
            init: function () {
                $("#Nik").inputmask({
                    mask: "9999999999999999",
                    placeholder: ""
                })
            }
        };
        jQuery(document).ready(function () {
            Inputmask.init()
        });

    </script>
}

