@model IEnumerable<SIP.Models.Ssrdr>

@{
    ViewBag.SubHeaderTitle = "SSRDR";
    ViewBag.S2 = "";
    ViewBag.S3 = "";
    ViewBag.S4 = "";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!--begin::Portlet-->
        <div class="kt-portlet" data-ktportlet="true" id="kt_portlet_tools_1">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-label">
                    <h3 class="kt-portlet__head-title">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-group">
                        <a asp-action="Create" asp-route-id="@ViewBag.IdCoa" class="btn btn-bold btn-label-brand btn-sm"><i class="la la-plus"></i> Tambah Data</a>
                        <a href="#" data-ktportlet-tool="toggle" class="btn btn-sm btn-icon btn-clean btn-icon-md"><i class="la la-angle-down"></i></a>
                    </div>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="kt-form kt-form--label-right kt-margin-t-10 kt-margin-b-10 kt-margin-5-mobile">
                    <div class="row align-items-center">
                        <div class="col-xl-12">
                            <div class="row align-items-center">
                                <div class="col-sm-2 col-1 kt-margin-b-10-mobile order-2 order-sm-1 length">
                                    <div class="kt-form__group">
                                        <select class="form-control kt-selectpicker" id="length">
                                            <option value="10">10</option>
                                            <option value="20">20</option>
                                            <option value="30">30</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-auto order-3 order-sm-2 kt-margin-b-10-mobile">
                                    <div class="kt-input-icon kt-input-icon--left">
                                        <input type="text" class="form-control" placeholder="Search..." id="search">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                            <span><i class="la la-search"></i></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover dt-custom" id="m_table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>
                                Nama WP
                            </th>
                            <th>
                                No SSRDR
                            </th>
                            <th>
                                Tanggal SSRDR
                            </th>
                            <th>
                                Terhutang
                            </th>
                            <th>
                                Validasi
                            </th>
                            <th>
                                Validasi
                            </th>
                            <th>
                                Kelola
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td></td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nama)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NoSsrdr)
                            </td>
                            <td>
                                @string.Format("{0:dd MMMM yyyy}", item.Tanggal)
                            </td>
                            <td>
                                @string.Format("{0:C0}", item.Total)
                            <td>
                                @(item.TanggalValidasi!= null ? "1" : "0")
                            </td>
                            <td>
                                @(item.TanggalValidasi != null ? "1" : "0")
                            </td>
                            <td nowrap>
                                <span style="overflow: visible; position: relative;">
                                    <span class="dropdown">
                                        <a href="#" class="btn btn-sm btn-label-success" data-toggle="dropdown" aria-expanded="false"> Kelola</a>
                                        <span class="dropdown-menu dropdown-menu-right">
                                            <a asp-action="Details" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-external-link-square"></i> Detail SSRDR </a>
                                            @if (item.TanggalValidasi == null)
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-edit"></i> Edit </a>
                                                <a asp-action="Data" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-list"></i> Edit Detail </a>
                                                <a asp-action="Validasi" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-check-circle"></i> Validasi SSRDR </a>
                                                <a mini-modal asp-action="Delete" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-trash-o"></i> Hapus </a>
                                            }
                                            else
                                            {
                                                <a asp-action="Cetak" asp-route-id="@item.IdSsrdr" class="dropdown-item"><i class="la la-print"></i> Cetak </a>
                                            }
                                        </span>
                                    </span>
                                </span>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!--end::Portlet-->
    </div>
</div>

@section Scripts {
    <script>
        var DatatablesBasicScrollable = function () {
            var initTable = function () {
                var table = $('#m_table');
                table.DataTable({
                    searching: true,
                    bJQueryUI: true,
                    bFilter: true,
                    dom: "<'row'<'col-sm-12'tr>>\n\t\t\t<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                    scrollY: '60vh',
                    scrollX: true,
                    scrollCollapse: true,
                    columnDefs: [{
                        targets: 0,
                        width: 15,
                        className: "dt-center"
                    }, {
                        targets: -1,
                        width: 100,
                        className: "dt-center"
                    }, {
                        targets: 6,
                        visible: false
                    }, {
                        targets: 5,
                        render: function (data, type, full, meta) {
                            var status = {
                                "0": {
                                    'title': 'Belum Bayar',
                                    'state': 'danger'
                                },
                                "1": {
                                    'title': 'Lunas',
                                    'state': 'success'
                                }
                            };
                            if (typeof status[data] === 'undefined') {
                                return data;
                            }
                            return '<span class="kt-badge kt-badge--' + status[data].state + ' kt-badge--dot"></span>&nbsp;' +
                                '<span class="kt-font-bold kt-font-' + status[data].state + '">' + status[data].title + '</span>';
                        }
                    }]
                });

                $('#m_table').DataTable().on('order.dt search.dt', function () {
                    $('#m_table').DataTable().column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                        cell.innerHTML = i + 1;
                        $('#m_table').DataTable().cell(cell).invalidate('dom');
                    });
                }).draw();

                $('#length').on('change', function () {
                    var selectedValue = $(this).val();
                    $('#m_table').DataTable().page.len(selectedValue).draw();
                });


                $("#search").on('keyup', function () {
                    $('#m_table').dataTable().fnFilter(this.value);
                });

                $('.dataTables_scrollBody').css('min-height', '150px');
            };

            return {
                init: function () {
                    initTable();
                },
            };

        }();

        jQuery(document).ready(function () {
            DatatablesBasicScrollable.init();
        });

    </script>
}
