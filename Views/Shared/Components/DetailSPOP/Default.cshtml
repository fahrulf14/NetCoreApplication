@model SIP.Models.Spop


<div class="kt-portlet kt-portlet--tabs">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <ul class="nav nav-tabs nav-tabs-bold nav-tabs-line   nav-tabs-line-right nav-tabs-line-brand" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#portlet_tab_subjek" role="tab">
                        Data SPOP
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="kt-portlet__body">
    <div class="tab-content">
        <div class="tab-pane active" id="portlet_tab_subjek">
            <div class="kt-widget kt-widget--user-profile-2">
                <div class="kt-widget__body">
                    <div class="kt-widget__item">
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Nama:</span>
                            <span class="kt-widget__data kt-align-right">@Model.IdSubjekNavigation.Nama</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">NPWPD:</span>
                            <span class="kt-widget__data kt-align-right">@Model.IdSubjekNavigation.Npwpd</span>
                        </div>
                        @if (Model.IdSubjekNavigation.IdBadanHukum != null)
                        {
                            <div class="kt-widget__contact">
                                <span class="kt-widget__label">NPWP:</span>
                                <span class="kt-widget__data kt-align-right">@Model.IdSubjekNavigation.Npwp</span>
                            </div>
                        }
                        else
                        {
                            <div class="kt-widget__contact">
                                <span class="kt-widget__label">NIK:</span>
                                <span class="kt-widget__data kt-align-right">@Model.IdSubjekNavigation.Nik</span>
                            </div>
                        }
                    </div>
                    <div class="kt-separator kt-separator--space-sm kt-separator--border-dashed"></div>
                    <div class="kt-widget__item">
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">NOP:</span>
                            <span class="kt-widget__data kt-align-right">@Model.Nop</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Letak:</span>
                            <span class="kt-widget__data kt-align-right">@Model.NamaJalan No. @Model.BlokKavNo</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label"></span>
                            <span class="kt-widget__data kt-align-right">RT. @Model.Rt RW. @Model.Rw</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label"></span>
                            <span class="kt-widget__data kt-align-right">Kec. @Model.IndKecamatan.Kecamatan</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label"></span>
                            <span class="kt-widget__data kt-align-right">Kel. @Model.IndKelurahan.Kelurahan</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label"></span>
                            <span class="kt-widget__data kt-align-right">@Model.IndKabKota.KabKota</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Luas Tanah</span>
                            <span class="kt-widget__data kt-align-right">@Model.LuasTanah M<sup>2</sup></span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Jumlah Bangunan</span>
                            <span class="kt-widget__data kt-align-right">@Model.JumlahBangunan</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Jenis Tanah</span>
                            <span class="kt-widget__data kt-align-right">@Model.JenisTanah</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">Kelas</span>
                            <span class="kt-widget__data kt-align-left">@Model.Zona</span>
                        </div>
                        <div class="kt-widget__contact">
                            <span class="kt-widget__label">NJOP</span>
                            <span class="kt-widget__data kt-align-right">@string.Format("{0:C0}", Model.Njop)</span>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
    </div>
</div>