@model SIP.Models.Sptpd

<div class="row">
    <div class="col-lg-3">
        <div class="form-group">
            <label asp-for="Tanggal" class="control-label required"></label>
            @if (Model.Tanggal != null)
            {
                <input asp-for="Tanggal" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required form="sptpd" />
            }
            else
            {
                <input asp-for="Tanggal" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" value="@string.Format("{0:dd-MM-yyyy}", DateTime.Now)" autocomplete="off" required form="sptpd" />
            }
            <span asp-validation-for="Tanggal" class="text-danger"></span>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="form-group">
            <label class="control-label required">Masa Pajak</label>
            <select class="form-control kt-selectpicker" id="MasaPajak" data-size="6" required title="Pilih Bulan..." asp-items="ViewBag.MasaPajak"></select>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="MasaPajak1" class="control-label required">Tanggal Masa Pajak</label>
            <div class="input-group">
                <input asp-for="MasaPajak1" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required form="sptpd" />
                <div class="input-group-append">
                    <span class="input-group-text"><i class="la la-ellipsis-h"></i></span>
                </div>
                <input asp-for="MasaPajak2" class="form-control datefield" type="text" asp-format="{0:dd-MM-yyyy}" autocomplete="off" required form="sptpd" />
            </div>
        </div>
    </div>
</div>
<div class="kt-separator kt-separator--space-sm"></div>