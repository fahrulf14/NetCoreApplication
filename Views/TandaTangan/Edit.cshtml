@model SIP.Models.TandaTangan

<form asp-action="Edit">
    <div class="modal-header">
        <h5 class="modal-title" id="ModalTitle">Tambah Data Tanda Tangan</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" class="la la-remove"></span>
        </button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="IdTtd" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label class="control-label">Dokumen</label>
                <input class="form-control" disabled value="@Model.IdDokumenNavigation.Dokumen" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label asp-for="IdPegawai" class="control-label">Pegawai</label>
                <select asp-for="IdPegawai" class="form-control kt-selectpicker" title="Pilih Pegawai..." required asp-items="ViewBag.IdPegawai"></select>
                <span asp-validation-for="IdPegawai" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" value="Simpan" class="btn btn-success" />
    </div>
</form>